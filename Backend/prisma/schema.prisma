generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement()) @map("UserID")
  username     String   @db.VarChar(20) @map("Username")
  email        String   @unique @db.VarChar(255) @map("Email")
  password     String   @db.VarChar(255) @map("Password")
  phone        String?  @db.VarChar(15) @map("Phone")
  dateDeleted  DateTime? @map("DateDeleted")
  dateModified DateTime @updatedAt @map("DateModified")
  dateCreated  DateTime @default(now()) @map("DateCreated")

  // Relations
  createdWorkspaces   Workspace[]       @relation("UserWorkspaces")
  workspaceMemberships WorkspaceMember[] @relation("WorkspaceMembers")
  createdProjects     Project[]         @relation("CreatedProjects")
  projectMemberships  ProjectMember[]   @relation("ProjectMembers")

  @@map("Users")
}

model Role {
  id           Int      @id @default(autoincrement()) @map("RoleID")
  roleName     String   @db.VarChar(20) @map("RoleName")
  description  String?  @map("Description")
  permissionId Json?    @map("PermissionID")
  dateCreated  DateTime @default(now()) @map("DateCreated")
  dateModified DateTime @updatedAt @map("DateModified")

  @@map("Roles")
}

model OtpCode {
  id          Int      @id @default(autoincrement()) @map("OtpID")
  phone       String   @db.VarChar(15) @map("Phone")
  otpCode     String   @db.VarChar(6) @map("OtpCode")
  isUsed      Boolean  @default(false) @map("IsUsed")    // Đánh dấu OTP đã được sử dụng thành công
  attempts    Int      @default(0) @map("Attempts")      // Số lần nhập sai (bảo mật chống brute force)
  expiresAt   DateTime @map("ExpiresAt")                 // Thời gian hết hạn OTP
  dateCreated DateTime @default(now()) @map("DateCreated")

  @@map("OtpCodes")
  @@index([phone])
}


enum WorkspaceType {
  PERSONAL
  GROUP
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

model Workspace {
  id            Int           @id @default(autoincrement()) @map("WorkspaceID")
  workspaceName String        @db.VarChar(100) @map("WorkspaceName")
  description   String?       @db.Text @map("Description")
  userId        Int           @map("UserID")
  workspaceType WorkspaceType @map("WorkspaceType")
  dateDeleted   DateTime?     @map("DateDeleted")
  dateModified  DateTime      @updatedAt @map("DateModified")
  dateCreated   DateTime      @default(now()) @map("DateCreated")

  // Relations
  user             User               @relation("UserWorkspaces", fields: [userId], references: [id])
  workspaceMembers WorkspaceMember[]
  projects        Project[]

  // PostgreSQL optimizations
  @@index([userId])
  @@index([workspaceType])
  @@index([dateCreated])
  @@index([dateDeleted])
  @@map("Workspaces")
}

model WorkspaceMember {
  id          Int         @id @default(autoincrement()) @map("WorkspaceMemberID")
  workspaceId Int         @map("WorkspaceID")
  userId      Int         @map("UserID")
  role        MemberRole  @default(MEMBER) @map("Role")
  joinedAt    DateTime    @default(now()) @map("JoinedAt")
  dateDeleted DateTime?   @map("DateDeleted")

  // Relations
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation("WorkspaceMembers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("WorkspaceMembers")
  @@index([workspaceId])
  @@index([userId])
  @@index([role])
  @@index([dateDeleted])
}

model Project {
  id           Int      @id @default(autoincrement()) @map("ProjectID")
  projectName  String   @db.VarChar(100) @map("ProjectName")
  workspaceId  Int      @map("WorkspaceID")
  description  String?  @db.Text @map("Description")
  createdBy    Int      @map("CreatedBy")
  dateDeleted  DateTime? @map("DateDeleted")
  dateModified DateTime @updatedAt @map("DateModified")
  dateCreated  DateTime @default(now()) @map("DateCreated")

  // Relations
  workspace    Workspace     @relation(fields: [workspaceId], references: [id])
  creator      User          @relation("CreatedProjects", fields: [createdBy], references: [id])
  members      ProjectMember[]
  projectRoles ProjectRole[]

  @@map("Projects")
}

model ProjectMember {
  id            Int      @id @default(autoincrement()) @map("ProjectMemberID")
  projectId     Int      @map("ProjectID")
  userId        Int      @map("UserID")
  projectRoleId Int      @map("ProjectRoleID")
  dateJoined    DateTime @default(now()) @map("DateJoined")

  // Relations
  project     Project     @relation(fields: [projectId], references: [id])
  user        User        @relation("ProjectMembers", fields: [userId], references: [id])
  projectRole ProjectRole @relation(fields: [projectRoleId], references: [id])

  @@map("ProjectMembers")
}

model ProjectRole {
  id           Int      @id @default(autoincrement()) @map("ProjectRoleID")
  projectId    Int      @map("ProjectID")
  roleName     String   @db.VarChar(100) @map("RoleName")
  description  String?  @db.VarChar(200) @map("Description")
  dateCreated  DateTime @default(now()) @map("DateCreated")
  dateModified DateTime @updatedAt @map("DateModified")

  // Relations
  project           Project                  @relation(fields: [projectId], references: [id])
  permissions       ProjectRolePermission[]
  projectMembers    ProjectMember[]

  @@map("ProjectRoles")
}

model Permission {
  id             Int                   @id @default(autoincrement()) @map("PermissionID")
  permissionName String                @unique @db.VarChar(100) @map("PermissionName")
  description    String?               @db.VarChar(200) @map("Description")
  projectRoles   ProjectRolePermission[]

  @@map("Permissions")
}

model ProjectRolePermission {
  projectRoleId Int @map("ProjectRoleID")
  permissionId  Int @map("PermissionID")

  // Relations
  projectRole ProjectRole @relation(fields: [projectRoleId], references: [id])
  permission  Permission  @relation(fields: [permissionId], references: [id])

  @@id([projectRoleId, permissionId])
  @@map("ProjectRolePermissions")
}
