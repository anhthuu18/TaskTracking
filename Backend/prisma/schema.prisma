generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int       @id @default(autoincrement()) @map("UserID")
  username     String    @map("Username") @db.VarChar(20)
  email        String    @unique @map("Email") @db.VarChar(255)
  password     String    @map("Password") @db.VarChar(255)
  phone        String?   @map("Phone") @db.VarChar(15)
  dateDeleted  DateTime? @map("DateDeleted")
  dateModified DateTime  @updatedAt @map("DateModified")
  dateCreated  DateTime  @default(now()) @map("DateCreated")

  // Relations
  createdWorkspaces      Workspace[]           @relation("UserWorkspaces")
  workspaceMemberships   WorkspaceMember[]     @relation("WorkspaceMembers")
  createdProjects        Project[]             @relation("CreatedProjects")
  projectMemberships     ProjectMember[]       @relation("ProjectMembers")
  sentInvitations        WorkspaceInvitation[] @relation("SentInvitations")
  sentProjectInvitations ProjectInvitation[]   @relation("SentProjectInvitations")

  @@map("Users")
}

model Role {
  id           Int      @id @default(autoincrement()) @map("RoleID")
  roleName     String   @map("RoleName") @db.VarChar(20)
  description  String?  @map("Description")
  permissionId Json?    @map("PermissionID")
  dateCreated  DateTime @default(now()) @map("DateCreated")
  dateModified DateTime @updatedAt @map("DateModified")

  @@map("Roles")
}

model OtpCode {
  id          Int      @id @default(autoincrement()) @map("OtpID")
  phone       String   @map("Phone") @db.VarChar(15)
  otpCode     String   @map("OtpCode") @db.VarChar(6)
  isUsed      Boolean  @default(false) @map("IsUsed") // Đánh dấu OTP đã được sử dụng thành công
  attempts    Int      @default(0) @map("Attempts") // Số lần nhập sai (bảo mật chống brute force)
  expiresAt   DateTime @map("ExpiresAt") // Thời gian hết hạn OTP
  dateCreated DateTime @default(now()) @map("DateCreated")

  @@index([phone])
  @@map("OtpCodes")
}

enum WorkspaceType {
  PERSONAL
  GROUP
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

model Workspace {
  id            Int           @id @default(autoincrement()) @map("WorkspaceID")
  workspaceName String        @map("WorkspaceName") @db.VarChar(100)
  description   String?       @map("Description") @db.Text
  userId        Int           @map("UserID")
  workspaceType WorkspaceType @map("WorkspaceType")
  dateDeleted   DateTime?     @map("DateDeleted")
  dateModified  DateTime      @updatedAt @map("DateModified")
  dateCreated   DateTime      @default(now()) @map("DateCreated")

  // Relations
  user             User                  @relation("UserWorkspaces", fields: [userId], references: [id])
  workspaceMembers WorkspaceMember[]
  projects         Project[]
  invitations      WorkspaceInvitation[]

  // PostgreSQL optimizations
  @@index([userId])
  @@index([workspaceType])
  @@index([dateCreated])
  @@index([dateDeleted])
  @@map("Workspaces")
}

model WorkspaceMember {
  id          Int        @id @default(autoincrement()) @map("WorkspaceMemberID")
  workspaceId Int        @map("WorkspaceID")
  userId      Int        @map("UserID")
  role        MemberRole @default(MEMBER) @map("Role")
  joinedAt    DateTime   @default(now()) @map("JoinedAt")
  dateDeleted DateTime?  @map("DateDeleted")

  // Relations
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation("WorkspaceMembers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@index([role])
  @@index([dateDeleted])
  @@map("WorkspaceMembers")
}

model Project {
  id           Int       @id @default(autoincrement()) @map("ProjectID")
  projectName  String    @map("ProjectName") @db.VarChar(100)
  workspaceId  Int       @map("WorkspaceID")
  description  String?   @map("Description") @db.Text
  createdBy    Int       @map("CreatedBy")
  dateDeleted  DateTime? @map("DateDeleted")
  dateModified DateTime  @updatedAt @map("DateModified")
  dateCreated  DateTime  @default(now()) @map("DateCreated")

  // Relations
  workspace           Workspace             @relation(fields: [workspaceId], references: [id])
  creator             User                  @relation("CreatedProjects", fields: [createdBy], references: [id])
  members             ProjectMember[]
  projectRoles        ProjectRole[]
  invitations         ProjectInvitation[]
  ProjectNotification ProjectNotification[]

  @@map("Projects")
}

model ProjectMember {
  id            Int      @id @default(autoincrement()) @map("ProjectMemberID")
  projectId     Int      @map("ProjectID")
  userId        Int      @map("UserID")
  projectRoleId Int      @map("ProjectRoleID")
  dateJoined    DateTime @default(now()) @map("DateJoined")

  // Relations
  project     Project     @relation(fields: [projectId], references: [id])
  user        User        @relation("ProjectMembers", fields: [userId], references: [id])
  projectRole ProjectRole @relation(fields: [projectRoleId], references: [id])

  @@map("ProjectMembers")
}

model ProjectRole {
  id           Int      @id @default(autoincrement()) @map("ProjectRoleID")
  projectId    Int      @map("ProjectID")
  roleName     String   @map("RoleName") @db.VarChar(100)
  description  String?  @map("Description") @db.VarChar(200)
  dateCreated  DateTime @default(now()) @map("DateCreated")
  dateModified DateTime @updatedAt @map("DateModified")

  // Relations
  project        Project                 @relation(fields: [projectId], references: [id])
  permissions    ProjectRolePermission[]
  projectMembers ProjectMember[]

  @@map("ProjectRoles")
}

model Permission {
  id             Int                     @id @default(autoincrement()) @map("PermissionID")
  permissionName String                  @unique @map("PermissionName") @db.VarChar(100)
  description    String?                 @map("Description") @db.VarChar(200)
  projectRoles   ProjectRolePermission[]

  @@map("Permissions")
}

model ProjectRolePermission {
  projectRoleId Int @map("ProjectRoleID")
  permissionId  Int @map("PermissionID")

  // Relations
  projectRole ProjectRole @relation(fields: [projectRoleId], references: [id])
  permission  Permission  @relation(fields: [permissionId], references: [id])

  @@id([projectRoleId, permissionId])
  @@map("ProjectRolePermissions")
}

enum InviteType {
  EMAIL
  IN_APP
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

model WorkspaceInvitation {
  id          Int              @id @default(autoincrement()) @map("InvitationID")
  workspaceId Int              @map("WorkspaceID")
  email       String           @map("Email") @db.VarChar(255)
  invitedBy   Int              @map("InvitedBy")
  inviteType  InviteType       @map("InviteType")
  status      InvitationStatus @default(PENDING) @map("Status")
  token       String           @unique @map("Token") @db.VarChar(255)
  message     String?          @map("Message") @db.Text
  expiresAt   DateTime         @map("ExpiresAt")
  acceptedAt  DateTime?        @map("AcceptedAt")
  createdAt   DateTime         @default(now()) @map("CreatedAt")
  updatedAt   DateTime         @updatedAt @map("UpdatedAt")

  // Relations
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  inviter   User      @relation("SentInvitations", fields: [invitedBy], references: [id])

  @@index([workspaceId])
  @@index([email])
  @@index([token])
  @@index([status])
  @@index([expiresAt])
  @@map("WorkspaceInvitations")
}

model ProjectInvitation {
  id         Int              @id @default(autoincrement()) @map("ProjectInvitationID")
  projectId  Int              @map("ProjectID")
  email      String           @map("Email") @db.VarChar(255)
  invitedBy  Int              @map("InvitedBy")
  inviteType InviteType       @map("InviteType")
  status     InvitationStatus @default(PENDING) @map("Status")
  token      String           @unique @map("Token") @db.VarChar(255)
  message    String?          @map("Message") @db.Text
  roleId     Int?             @map("RoleID") // Project role to assign when accepted
  expiresAt  DateTime         @map("ExpiresAt")
  acceptedAt DateTime?        @map("AcceptedAt")
  createdAt  DateTime         @default(now()) @map("CreatedAt")
  updatedAt  DateTime         @updatedAt @map("UpdatedAt")

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  inviter User    @relation("SentProjectInvitations", fields: [invitedBy], references: [id])

  @@index([projectId])
  @@index([email])
  @@index([token])
  @@index([status])
  @@index([expiresAt])
  @@map("ProjectInvitations")
}

// In-app notifications for project events (added to project, etc.)
model ProjectNotification {
  id             Int      @id @default(autoincrement()) @map("ProjectNotificationID")
  projectId      Int      @map("ProjectID")
  receiverUserId Int      @map("ReceiverUserID")
  title          String   @map("Title") @db.VarChar(200)
  message        String?  @map("Message") @db.Text
  isRead         Boolean  @default(false) @map("IsRead")
  createdAt      DateTime @default(now()) @map("CreatedAt")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([receiverUserId])
  @@map("ProjectNotifications")
}
