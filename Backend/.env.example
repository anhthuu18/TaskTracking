# Database
DATABASE_URL="postgresql://username:password@localhost:5432/Task_Tracking"

# JWT
JWT_SECRET="your-jwt-secret-key"

# Google OAuth
GOOGLE_ANDROID_CLIENT_ID="your-android-client-id"
GOOGLE_WEB_CLIENT_ID="your-web-client-id"

# Firebase Configuration (for authentication, not SMS)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# Twilio Configuration (for SMS/Email)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+84777960406"
# Comment out Service SID v√¨ format sai
# TWILIO_SERVICE_SID="VA4527eb74fe56ee21c340277518ad86a9"

# IMPORTANT: Update your .env file with VN Twilio number:
# TWILIO_PHONE_NUMBER="+84777960406"
# Test with verified VN numbers only (trial account limitation)

# SendGrid Configuration (for email OTP - website)
SENDGRID_API_KEY="your-sendgrid-api-key"

# Server
PORT=3000
